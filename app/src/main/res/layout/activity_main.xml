<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.qbw.settingitem.HorizontalSettingItem
        android:id="@+id/hsi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:hsi_left_image="@drawable/vip"
        app:hsi_right_image="@drawable/arrow"
        app:hsi_show_right_image="true"
        app:hsi_show_right_text="true"
        app:hsi_subtitle="子标题子标题"
        app:hsi_title="标题标题"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.qbw.settingitem.VerticalSettingItem
        android:id="@+id/vsi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hsi"
        app:vsi_nv_margin_bottom="20dp"
        app:vsi_nv_margin_left="20dp"
        app:vsi_title="标题"
        app:vsi_title_color="#aa0000"
        app:vsi_top_image="@drawable/pay"
        app:vsi_top_image_size="160dp" />

    <com.qbw.settingitem.NumberView
        android:id="@+id/nv111"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vsi"
        app:nv_circleBg="@drawable/bg_circle"
        app:nv_padding_3digit_horizontal="5dp"
        app:nv_padding_3digit_vertical="3dp"
        app:nv_show_plus_when_3dight="true"
        app:nv_rectBg="@drawable/bg_rect"
        app:nv_change_bg_when_3dight="true"
        app:nv_textColor="#000000"
        app:nv_textSize="13sp"
        app:nv_whenCicleSize="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>